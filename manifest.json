{
  "manifest_version": 2,

  "name": "Talker",
  "description": "This extension will read text to you.",
  "version": "0.1",

  "permissions": [
    "tts",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

    "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["contentscript.js"],
      "run_at": "document_end"
    }
  ]
}